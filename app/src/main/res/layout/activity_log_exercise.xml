<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".LogFood"
    android:background="#EDEDED">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/exerciseName"
        android:text="Exercise name"
        android:textSize="22dp"
        android:textStyle="bold"
        android:fontFamily="@font/sfpro"
        android:textColor="#000000"
        android:layout_marginBottom="5dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="300dp"
        android:orientation="vertical"
        android:background="#EDEDED" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="#EDEDED" >

            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/sfpro"
                android:textColor="#000000"
                android:text="Calories burned / hour"
                android:textSize="14sp"
                android:layout_marginLeft="10dp"/>

            <!-- Right EditText -->
            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/calsBurned"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:textSize="14sp"
                android:padding="8dp"
                android:gravity="right"
                android:inputType="text"
                android:fontFamily="@font/sfpro"
                android:textColor="#000000"
                android:hint="555"
                android:layout_marginRight="10dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:background="#EDEDED" >

            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Time"
                android:textSize="14sp"
                android:fontFamily="@font/sfpro"
                android:textColor="#000000"
                android:layout_marginLeft="10dp"/>

            <EditText
                android:layout_marginTop="10dp"
                android:id="@+id/time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:textSize="14sp"
                android:padding="8dp"
                android:gravity="right"
                android:inputType="datetime"
                android:fontFamily="@font/sfpro"
                android:textColor="#000000"
                android:hint="H:MM"
                android:layout_marginRight="10dp"
                android:maxLength="5"/>

        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:background="#EDEDED" >

                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Total calories burned"
                    android:textSize="16sp"
                    android:fontFamily="@font/sfpro"
                    android:textColor="#000000"
                    android:maxLines="1"
                    android:layout_marginLeft="10dp"/>

                <!-- Right EditText -->
                <TextView
                    android:layout_marginTop="10dp"
                    android:id="@+id/totalCalories"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:textSize="16sp"
                    android:padding="8dp"
                    android:gravity="right"
                    android:fontFamily="@font/sfpro"
                    android:textColor="#000000"
                    android:text="555"
                    android:textStyle="bold"
                    android:layout_marginRight="10dp"/>
            </LinearLayout>

            <Button
                android:id="@+id/logExercise"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:background="@drawable/button_ios"
                android:text="Log exercise" />
        </LinearLayout>

    </LinearLayout>